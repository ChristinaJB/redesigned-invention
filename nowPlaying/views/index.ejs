<div class="container">
    <div class="row">
        <div class="col-lg-6 offset-md-3">
            <% for(var i = 0; i < insertMovies.length; i++) { %>
            <h1>Now playing at a theater near you:</h1>
            <h1><%=insertMovies[i].title%></h1>
            <p><%=insertMovies[i].overview%></p>
            <p><%=insertMovies[i].vote_average%></p>
            <img id="poster" src="https://image.tmdb.org/t/p/w500<%=insertMovies[i].poster_path%>" alt="Movie poster">
            <% } %>
        </div>
    </div>
</div>





